<p id="notice"><%= notice %></p>

<h1>Castles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Appellation</th>
      <th>Pays</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @castles.each do |castle| %>
      <tr>
        <td><%= castle.name %></td>
        <td><%= castle.appellation %></td>
        <td><%= castle.pays %></td>
        <td><%= link_to 'Show', castle %></td>
        <td><%= link_to 'Edit', edit_castle_path(castle) %></td>
        <td><%= link_to 'Destroy', castle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

